<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff"
    tools:context=".ui.main.PlaceholderFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLaBai1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".3"
            android:src="@drawable/anhbaiup"/>

        <ImageView
            android:id="@+id/imgLaBai2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".3"
            android:src="@drawable/anhbaiup"/>

        <ImageView
            android:id="@+id/imgLaBai3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight=".3"
            android:src="@drawable/anhbaiup"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnRutBai"

        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="right|center_vertical|end"
        android:text="Rút bài"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#3B3B98"
        tools:layout_marginTop="50dp" />


</LinearLayout>