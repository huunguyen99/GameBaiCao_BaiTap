<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#ffffff"
tools:context=".MainActivity" >
    <TextView
        android:id="@+id/txtSoVanConLai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:textSize="16dp"
        android:textColor="#800000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Còn 20 ván">
    </TextView>

    <TextView
        android:id="@+id/txtDiemTong"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết Quả:\t\t\t\t Người chơi: 0 \t\t|\t\t Máy : 0"
        android:textColor="#F90000"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBaiMay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />

        <ImageView
            android:id="@+id/imageViewBaiMay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />

        <ImageView
            android:id="@+id/imageViewBaiMay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtDiemMay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto"
            android:textSize="20dp"
            android:text="Máy : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000" />


        <Button
            android:id="@+id/btnPlay"
            android:layout_gravity="center"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="Play"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:background="@drawable/background_btn">
        </Button>

        <TextView
            android:id="@+id/txtDiemNguoiChoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto"
            android:textSize="20dp"
            android:text="Bạn : "
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FF0000" />




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageViewBaiNguoiChoi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />

        <ImageView
            android:id="@+id/imageViewBaiNguoiChoi2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />

        <ImageView
            android:id="@+id/imageViewBaiNguoiChoi3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:src="@drawable/anhbaiup" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnLatBai"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="Lật Bài"
            android:textColor="#ffffff"
            android:background="@drawable/background_latbai">
        </Button>
        <Button
            android:id="@+id/btnKetThuc"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="Kết Thúc"
            android:textColor="#ffffff"
            android:background="@drawable/background_ketthuc">
        </Button>
    </LinearLayout>




</LinearLayout>